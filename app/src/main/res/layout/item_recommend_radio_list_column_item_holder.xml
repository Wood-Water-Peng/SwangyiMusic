<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_recommend_radio_column_item_icon"
        android:layout_width="112dp"
        android:layout_height="110dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/item_recommend_radio_column_item_icon_album_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="3000000"
        android:textColor="@color/text_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_recommend_radio_column_item_icon_artist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="3000000"
        android:textColor="@color/test_color"
        android:textSize="10sp" />

</LinearLayout>