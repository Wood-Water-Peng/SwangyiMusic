<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="120dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/item_playing_list_detail_header_cover_container"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp">

            <ImageView
                android:id="@+id/item_playing_list_detail_header_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_toLeftOf="@+id/item_playing_list_detail_header_listener_count"
                android:background="@mipmap/icon_headset" />

            <TextView
                android:id="@+id/item_playing_list_detail_header_listener_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                android:text="186万"
                android:textColor="@color/white_text"
                android:textSize="10sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/item_playing_list_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_text"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/item_playing_list_detail_creator_avatar"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/item_playing_list_detail_creator_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/item_playing_list_detail_creator_avatar"
                android:gravity="center"
                android:textColor="@color/white_text"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/album_detail_header_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/playlist_collect_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/list_detail_icn_fav"
            android:gravity="center"
            android:text="收藏"
            android:textColor="@color/white_text"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/list_detail_icn_cmt_dis"
            android:gravity="center"
            android:text="评论"
            android:textColor="@color/white_text"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/list_detail_icn_share"
            android:gravity="center"
            android:text="分享"
            android:textColor="@color/white_text"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/item_playing_list_detail_header_column_item_holder_multi_select"
            android:drawableTop="@mipmap/multi_select"
            android:gravity="center"
            android:text="多选"
            android:textColor="@color/white_text"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>