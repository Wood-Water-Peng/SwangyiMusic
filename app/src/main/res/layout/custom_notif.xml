<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_notif_content"
    android:layout_width="match_parent"
    android:layout_height="106dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/custom_notification_icon"
        android:layout_width="106dp"
        android:layout_height="match_parent"
        android:src="@mipmap/play_disc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/custom_notification_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Notification.Title"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/custom_notification_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/custom_notification_name"
            android:textAppearance="@android:style/TextAppearance.Material.Notification.Line2"
            android:textColor="@android:color/secondary_text_dark"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2dp">

            <ImageView
                android:id="@+id/custom_notification_play_pre"
                android:layout_width="48dp"
                android:layout_height="48dp" />


            <ImageView
                android:id="@+id/custom_notification_play"
                android:layout_width="48dp"
                android:layout_height="48dp" />


            <ImageView
                android:id="@+id/custom_notification_play_next"
                android:layout_width="48dp"
                android:layout_height="48dp" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
