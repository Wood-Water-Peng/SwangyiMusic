<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_recommend_music_column_item_icon"
            android:layout_width="112dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/item_recommend_music_column_item_tv_listener_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/white_text"
            android:textSize="10dp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/item_recommend_music_column_item_tv_listener_count"
            android:background="@mipmap/icon_headset"
            android:scaleType="centerCrop" />

    </RelativeLayout>

    <TextView
        android:id="@+id/item_recommend_music_column_item_icon_album_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="@color/text_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_recommend_music_column_item_icon_artist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/test_color"
        android:textSize="10sp" />

</LinearLayout>