<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jackypeng.swangyimusic.ui.activity.AlbumDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/activity_radio_detail_cover"
            android:layout_width="match_parent"
            android:layout_height="253dp" />

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/activity_radio_detail_slidingTab"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="2dp"
            app:tl_textsize="16sp"
            tl:tl_divider_padding="1dp"
            tl:tl_indicator_color="@color/general_red"
            tl:tl_indicator_height="2dp"
            tl:tl_tab_padding="10dp"
            tl:tl_tab_space_equal="true"
            tl:tl_textSelectColor="@color/general_red"
            tl:tl_textUnselectColor="#707070" />

        <android.support.v4.view.ViewPager
            android:id="@+id/activity_radio_detail_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <include layout="@layout/title_bar" />
</RelativeLayout>
